@model OnlineStore.ViewModels.ManufacturerViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Manufacturer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manufacturer.Name" class="control-label"></label>
                <input asp-for="Manufacturer.Name" class="form-control" />
                <span asp-validation-for="Manufacturer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer.Address" class="control-label"></label>
                <input asp-for="Manufacturer.Address" class="form-control" />
                <span asp-validation-for="Manufacturer.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer.Country" class="control-label"></label>
                <input asp-for="Manufacturer.Country" class="form-control" />
                <span asp-validation-for="Manufacturer.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer.Email" class="control-label"></label>
                <input asp-for="Manufacturer.Email" class="form-control" />
                <span asp-validation-for="Manufacturer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoURL" class="control-label"></label>
                <input type="file" asp-for="PhotoURL" class="form-control" />
                <span asp-validation-for="PhotoURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer.FoundingDate" class="control-label"></label>
                <input asp-for="Manufacturer.FoundingDate" class="form-control" />
                <span asp-validation-for="Manufacturer.FoundingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
